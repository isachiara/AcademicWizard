        <servlet-class>Servlets.perfilAluno</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>servletMatricula</servlet-name>
        <servlet-class>Servlets.servletMatricula</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>editarAluno</servlet-name>
        <servlet-class>Servlets.editarAluno</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListaDisciplinasProfessor</servlet-name>
        <servlet-class>Controller.ListaDisciplinasProfessor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginProfessor</servlet-name>
        <servlet-class>Servlets.LoginProfessor</servlet-class>
