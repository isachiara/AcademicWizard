    <servlet-mapping>
        <servlet-name>CrudAdmin</servlet-name>
        <url-pattern>/CrudAdmin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginAluno</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>listaDisciplina</servlet-name>
        <url-pattern>/disciplinas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>perfilAluno</servlet-name>
        <url-pattern>/perfilAluno</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>servletMatricula</servlet-name>
        <url-pattern>/matricula</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editarAluno</servlet-name>
        <url-pattern>/editarAluno</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListaDisciplinasProfessor</servlet-name>
        <url-pattern>/ListaDisciplinasProfessor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginProfessor</servlet-name>
        <url-pattern>/LoginProfessor</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
